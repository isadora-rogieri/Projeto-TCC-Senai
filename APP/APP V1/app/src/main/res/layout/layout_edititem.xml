<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="190dp">


    <ImageView
        android:id="@+id/imgProdutoed"
        android:layout_width="137dp"
        android:layout_height="147dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtNomeProdutoed"
        android:layout_width="191dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#F31313"
        android:textColorHighlight="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imgProdutoed"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDescricaoed"
        android:layout_width="203dp"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="#F31313"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imgProdutoed"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeProdutoed" />

    <TextView
        android:id="@+id/txtValorProdutoed"
        android:layout_width="121dp"
        android:layout_height="35dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="#F31313"
        android:textSize="21sp"
        app:layout_constraintStart_toEndOf="@+id/imgProdutoed"
        app:layout_constraintTop_toBottomOf="@+id/txtDescricaoed" />

    <TextView
        android:id="@+id/txtValorProdutoedRs"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="RS"
        android:textColor="#F31313"
        android:textSize="21sp"
        app:layout_constraintStart_toEndOf="@+id/imgProdutoed"
        app:layout_constraintTop_toBottomOf="@+id/txtDescricaoed" />

    <View
        android:id="@+id/divider3"
        android:layout_width="409dp"
        android:layout_height="10dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        android:foreground="#F31313"
        android:foregroundTint="#F31313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtValorProdutoed" />
</androidx.constraintlayout.widget.ConstraintLayout>